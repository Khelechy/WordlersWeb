        <div class="col-2">Password</div>
        <div class="col-4"><input type="text" id="password" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="loginButton" value="Login" />
        </div>
    </div>
